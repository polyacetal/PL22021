#include <stdio.h>
#include <stdlib.h>

int main(void)
{
		int x,y,z;
		int a;

		printf("💩計算ドリル\n");

		while (1) {
				x = rand()%100 + 1;
				y = rand()%10 + 1;
				printf("♪♪♪♪♪♪♪♪♪♪♪♪♪♪♪♪♪♪♪♪♪♪♪♪♪♪♪♪♪♪\n");
				printf("%d 個の💩をもらいました. \n", x);
				printf("%d 人で山分けしましょう. \n", y);
				printf("一人分は何個ですか？ >");
				scanf("%d", &a);
				z = x/y;
				
				if (a == z) {
						printf("○\n");
				}else{
						printf("☓ :正解は%dです.", z);
				}
		}
		printf("\nおしまい. \n");
		return(0);
}
